{{>layout/header}}

    <h1>スプリングブートで始まるウェブサービスv2</h1>

    <div class="col-md-12">
        <div class="row">
            <div clas="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">文登録</a>
            </div>
        </div>
        <br>
        <!--リスト出力-->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>No.</th>
                <th>タイトル</th>
                <th>名前</th>
                <th>最終修正日</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}